@startjson
<style>
jsonDiagram {
	node {
		BackGroundColor Khaki
		LineColor lightblue
		FontName Helvetica
		FontColor red
		FontSize 18
		FontStyle bold
		RoundCorner 0
		LineThickness 2
		LineStyle 10;5
		separator {
			LineThickness 0.5
			LineColor black
			LineStyle 1;5
